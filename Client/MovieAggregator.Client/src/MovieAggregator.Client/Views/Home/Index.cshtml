@model HomeViewModel

@{
    @if (Model.HasEntries())
    {
        ViewBag.Title = "MovieAggregator Client";
    }
}

@await Html.PartialAsync("_Header", @Model)

@if (Model.HasEntries())
{ 
    foreach (var entry in Model.MovieInfo.Entries)
    {
        @await Html.PartialAsync("_MovieDetails", entry)
    }
}

@await Html.PartialAsync("_Footer", @Model)